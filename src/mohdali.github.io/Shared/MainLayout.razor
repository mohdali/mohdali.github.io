@inherits LayoutComponentBase

<MudThemeProvider Theme="@_theme" IsDarkMode="@_isDarkMode"/>

<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />


<MudLayout>
    <MudAppBar>
        <MudTooltip Text="Home">
            <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" href="/" />
        </MudTooltip>
        <MudLink Typo="Typo.h5" class="ml-3 logo" Href="/" Color="Color.Inherit">mohdali.dev</MudLink>
        <MudSpacer />
        <ThemeSwitcher OnThemeChanged="@HandleThemeChanged"/>

    </MudAppBar>
    <MudMainContent class="main-content">
        @Body
    </MudMainContent>
    <MudAppBar Bottom="true" Fixed="true" Color="Color.Transparent" Elevation="0" Class="footer-bar">
        <MudContainer MaxWidth="MaxWidth.Large">
            <div class="footer-content">
                <div class="footer-text">
                    <MudText Typo="Typo.body2">&copy; @DateTime.Now.Year Mohamed Ali</MudText>
                    <MudText Typo="Typo.caption" Color="Color.Secondary">Built with Blazor & MudBlazor</MudText>
                </div>
                <MudSpacer />
                <div class="footer-social">
                    <MudTooltip Text="GitHub">
                        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" 
                                      Target="_blank" 
                                      href="https://github.com/mohdali/" 
                                      Color="Color.Inherit"
                                      Class="social-icon"/>
                    </MudTooltip>
                    <MudTooltip Text="Twitter">
                        <MudIconButton Icon="@Icons.Custom.Brands.Twitter" 
                                      Target="_blank" 
                                      href="https://twitter.com/mohdali" 
                                      Color="Color.Inherit"
                                      Class="social-icon"/>
                    </MudTooltip>
                    <MudTooltip Text="Mastodon">
                        <MudIconButton Icon="fab fa-mastodon" 
                                      Target="_blank" 
                                      Href="https://mastodon.online/&#64;mohdali" 
                                      Color="Color.Inherit"
                                      Class="social-icon"/>
                    </MudTooltip>
                    <MudTooltip Text="Observable">
                        <MudIconButton Icon="@observableIcon" 
                                      Target="_blank" 
                                      href="https://observablehq.com/&#64;mohdali" 
                                      Color="Color.Inherit"
                                      Class="social-icon"/>
                    </MudTooltip>
                </div>
            </div>
        </MudContainer>
    </MudAppBar>
</MudLayout>

